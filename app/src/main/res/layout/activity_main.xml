<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.markieta.persistentstate_2017s.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_text_view_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:hint="@string/placeholder_id"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="92dp"
        android:id="@+id/editText_ID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/placeholder_grade"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/editText_ID"
        android:id="@+id/editText_Grade"
        android:inputType="textNoSuggestions" />

    <Button
        android:text="@string/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Grade"
        android:layout_alignStart="@+id/editText_Grade"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:id="@+id/button" />

    <TextView
        android:text="@string/student_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_ID"
        android:layout_alignStart="@+id/editText_ID"
        android:layout_marginBottom="46dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="@string/student_grade_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_Grade"
        android:layout_alignStart="@+id/editText_Grade"
        android:id="@+id/textView3" />
</RelativeLayout>
